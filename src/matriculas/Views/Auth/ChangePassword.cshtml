@model Matriculas.ViewModels.PasswordViewModel
@{
    ViewBag.Title = "Alumnos";
}
@section scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/angular/angular.min.js"></script>
    <script src="~/js/simpleControls.js"></script>
    <script src="~/lib/angular-utils-pagination/dirPagination.js"></script>
}

<script>
    window.onload = function () {
        var item = $("#contrasenia");
        item.addClass("active");
        $("#contrasenia a").append("<span class='selected'></span>");
    };
</script>

@Html.ValidationSummary(true)
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a href="../App/Index">Home</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <span>Cambiar contraseña</span>
        </li>
    </ul>
</div>
<h1 class="page-title"></h1>
<div class="row col-md-4 col-centered">
    <div class="form-password">
        <form id="form-password" method="post">
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger model-state">
                    <button class="close" data-close="alert"></button>
                    <span class="text-validation">@Html.ValidationMessage("PasswordActual")</span>
                    <span class="text-validation">@Html.ValidationMessage("PasswordDiferentes")</span>
                </div>
            }
            <div class="form-group">
                <label asp-for="CurrentPassword" class="control-label">Password Actual</label>
                <span class="text-muted text-validation" asp-validation-for="CurrentPassword"></span>
                <input type="password" asp-for="CurrentPassword" class="form-control form-control-solid placeholder-no-fix" autocomplete="off" />
            </div>
            <div class="form-group">
                <label asp-for="NewPassword" class="control-label">Nuevo Password</label>
                <span class="text-muted text-validation" asp-validation-for="NewPassword"></span>
                <input type="password" asp-for="NewPassword" class="form-control form-control-solid placeholder-no-fix" autocomplete="off" />
            </div>
            <div class="form-group">
                <label asp-for="RepeatNewPassword" class="control-label">Reescribir Nuevo Password</label>
                <span class="text-muted text-validation" asp-validation-for="RepeatNewPassword"></span>
                <input type="password" asp-for="RepeatNewPassword" class="form-control form-control-solid placeholder-no-fix" autocomplete="off" />
            </div>
            <small class="text-muted">Las contraseñas deben contener entre 8 y 15 caracteres.</small>
            <div class="form-group form-buttons">
                <div class="form-actions">
                    <input type="submit" class="btn green" value="Cambiar Password">
                </div>
            </div>
        </form>
    </div>
</div>