@model Matriculas.ViewModels.AlumnoApoderadoViewModel
@{
    ViewBag.Title = "Matriculas";
}
@section scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/angular/angular.min.js"></script>
    <script src="~/js/simpleControls.js"></script>
    <script src="~/js/app.js"></script>
    <script src="~/js/matriculasController.js"></script>
    <script src="~/lib/angular-utils-pagination/dirPagination.js"></script>
}

<script>
    window.onload = function () {
        var item = $("#matriculas");
        item.addClass("active");
        $("#matriculas a").append("<span class='selected'></span>");
    };
</script>

<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a asp-contoller="App" asp-action="Index">Home</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <span>Matriculas</span>
        </li>
    </ul>
</div>

<div class="container" ng-app="app" ng-controller="matriculasController as vm">
    <div class="row">
        <div class="col-md-12 col-centered">
            <div class="wizard">
                <!-- Encabezados de paneles -->
                <div class="wizard-inner">
                    <div class="connecting-line"></div>
                    <ul class="nav nav-tabs" role="tablist">
                        <li role="presentation" class="active">
                            <a href="#step1" data-toggle="tab" aria-controls="step1" role="tab">
                                <span class="round-tab">
                                    <span class="circle">1</span>
                                </span>
                            </a>
                        </li>
                        <li role="presentation" class="disabled">
                            <a href="#step2" data-toggle="tab" aria-controls="step2" role="tab">
                                <span class="round-tab">
                                    <span class="circle">2</span>
                                </span>
                            </a>
                        </li>
                        <li role="presentation" class="disabled">
                            <a href="#step3" data-toggle="tab" aria-controls="step3" role="tab">
                                <span class="round-tab">
                                    <span class="circle">3</span>
                                </span>
                            </a>
                        </li>
                        <li role="presentation" class="disabled">
                            <a href="#complete" data-toggle="tab" aria-controls="complete" role="tab">
                                <span class="round-tab">
                                    <span class="circle">4</span>
                                </span>
                            </a>
                        </li>
                    </ul>
                </div>
                <!-- Contenidos de paneles -->
                <div class="tab-content">
                    <!-- Panel de Datos del alumno y apoderado -->
                    <div class="tab-pane active" role="tabpanel" id="step1">
                        <div class="modal-body col-md-10 col-centered">
                            <!-- Barra de búsqueda -->
                            <div class="col-md-12 matricula-buscar-alumno">
                                <div class="row">
                                    <form>
                                        <div class="search-bar">
                                            <input id="busqueda-dni" type="text" asp-for="Alumno.Dni" class="form-control" placeholder="Ingrese un DNI" maxlength="8" ng-model="vm.search">
                                            </div>
                                        <button ng-click="vm.getAlumnoByDni();" class="btn btn-small btn-primary">
                                            <i style="padding-bottom: 3px;" class="fa fa-search"></i>
                                        </button>
                                        <span asp-validation-for="Alumno.Dni" class="text-muted text-validation"></span>
                                    </form>
                                </div>
                            </div>
                            <!-- Formulario de visualización -->
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="portlet">
                                        <div class="portlet-title">
                                            <div class="caption">
                                                <i class="fa fa-user"></i>Datos del alumno y apoderado
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <form>
                                    <div class="col-md-6">
                                        <div class="form-group"><h4 class="modal-title">Datos alumno</h4></div>
                                        <div class="form-group">
                                            <label asp-for="Alumno.ApellidoPaterno">Apellido Paterno</label>
                                            <input type="text" disabled asp-for="Alumno.ApellidoPaterno" class="form-control" maxlength="25" ng-model="vm.alumno.apellidoPaterno" />
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Alumno.ApellidoMaterno">Apellido Materno</label>
                                            <input type="text" disabled asp-for="Alumno.ApellidoMaterno" class="form-control" maxlength="25" ng-model="vm.alumno.apellidoMaterno" />
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Alumno.Nombres">Nombres</label>
                                            <input type="text" disabled asp-for="Alumno.Nombres" class="form-control" maxlength="50" ng-model="vm.alumno.nombres" />
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Alumno.Sexo">Sexo</label>
                                            <select asp-for="Alumno.Sexo" disabled class="form-control" ng-model="vm.alumno.sexo">
                                                <option ng-selected="true" value="">Seleccione</option>
                                                <option value="M">Masculino</option>
                                                <option value="F">Femenino</option>
                                            </select>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Alumno.Direccion">Dirección</label>
                                            <input type="text" disabled asp-for="Alumno.Direccion" class="form-control" maxlength="70" ng-model="vm.alumno.direccion" />
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Alumno.FechaNacimiento">Fecha de Nacimiento</label>
                                            <input type="date" disabled asp-for="Alumno.FechaNacimiento" class="form-control" ng-model="vm.alumno.fechaNacimiento" />
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group"><h4 class="modal-title">Datos apoderado</h4></div>
                                        <div class="form-group">
                                            <label asp-for="Apoderado.ApellidoPaterno">Apellido Paterno</label>
                                            <input type="text" disabled asp-for="Apoderado.ApellidoPaterno" class="form-control" maxlength="25" ng-model="vm.alumno.apoderado.apellidoPaterno" />
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Apoderado.ApellidoMaterno">Apellido Materno</label>
                                            <input type="text" disabled asp-for="Apoderado.ApellidoMaterno" class="form-control" maxlength="25" ng-model="vm.alumno.apoderado.apellidoMaterno" />
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Apoderado.Nombres">Nombres</label>
                                            <input type="text" disabled asp-for="Apoderado.Nombres" class="form-control" maxlength="50" ng-model="vm.alumno.apoderado.nombres" />
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Apoderado.Dni">DNI</label>
                                            <input type="text" disabled asp-for="Apoderado.Dni" class="form-control" maxlength="8" ng-model="vm.alumno.apoderado.dni" />
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Apoderado.Sexo">Sexo</label>
                                            <select asp-for="Apoderado.Sexo" disabled class="form-control" ng-model="vm.alumno.apoderado.sexo">
                                                <option ng-selected="true" value="">Seleccione</option>
                                                <option value="M">Masculino</option>
                                                <option value="F">Femenino</option>
                                            </select>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Apoderado.EstadoCivil">Estado Civil</label>
                                            <select asp-for="Apoderado.EstadoCivil" disabled class="form-control" ng-model="vm.alumno.apoderado.estadoCivil">
                                                <option ng-selected="true" value="">Seleccione</option>
                                                <option value="S">Soltero</option>
                                                <option value="C">Casado</option>
                                                <option value="V">Viudo</option>
                                                <option value="D">Divorciado</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-group form-buttons">
                                            <button ng-click="vm.getAlumno(vm.alumno.id)" class="btn btn-small green" data-toggle="modal" href="#datos-alumno">
                                                <i class="fa fa-edit"></i> Editar
                                            </button>
                                            <button id="btn-step1" class="btn btn-primary">
                                                Guardar y continuar
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <!-- Formulario de edición -->
                            <div id="datos-alumno" data-backdrop="static" class="modal fade" tabindex="-1" data-width="1000">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                                    <h4 class="modal-title">Datos alumno</h4>
                                </div>
                                <div class="modal-body col-md-12">
                                    <form ng-submit="vm.updateAlumno()">
                                        <div class="col-md-6">
                                            <div class="form-group"><h4 class="modal-title">Datos alumno</h4></div>
                                            <div class="form-group">
                                                <label asp-for="Alumno.ApellidoPaterno">Apellido Paterno (*)</label>
                                                <span asp-validation-for="Alumno.ApellidoPaterno" class="text-muted text-validation"></span>
                                                <input type="text" asp-for="Alumno.ApellidoPaterno" class="form-control" maxlength="25" ng-model="vm.currentAlumno.apellidoPaterno" />
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="Alumno.ApellidoMaterno">Apellido Materno (*)</label>
                                                <span asp-validation-for="Alumno.ApellidoMaterno" class="text-muted text-validation"></span>
                                                <input type="text" asp-for="Alumno.ApellidoMaterno" class="form-control" maxlength="25" ng-model="vm.currentAlumno.apellidoMaterno" />
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="Alumno.Nombres">Nombres (*)</label>
                                                <span asp-validation-for="Alumno.Nombres" class="text-muted text-validation"></span>
                                                <input type="text" asp-for="Alumno.Nombres" class="form-control" maxlength="50" ng-model="vm.currentAlumno.nombres" />
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="Alumno.Dni">DNI (*)</label>
                                                <span id="messageDni" class="text-muted text-validation"></span>
                                                <input type="text" asp-for="Alumno.Dni" class="form-control" maxlength="8" placeholder="Ej. 71079379" ng-model="vm.currentAlumno.dni" />
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="Alumno.Sexo">Sexo (*)</label>
                                                <span asp-validation-for="Alumno.Sexo" class="text-muted text-validation"></span>
                                                <select asp-for="Alumno.Sexo" class="form-control" ng-model="vm.currentAlumno.sexo">
                                                    <option ng-selected="true" value="">Seleccione</option>
                                                    <option value="M">Masculino</option>
                                                    <option value="F">Femenino</option>
                                                </select>
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="Alumno.Direccion">Dirección (*)</label>
                                                <span asp-validation-for="Alumno.Direccion" class="text-muted text-validation"></span>
                                                <input type="text" asp-for="Alumno.Direccion" class="form-control" maxlength="70" ng-model="vm.currentAlumno.direccion" />
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="Alumno.FechaNacimiento">FechaNacimiento (*)</label>
                                                <span asp-validation-for="Alumno.FechaNacimiento" class="text-muted text-validation"></span>
                                                <input type="date" asp-for="Alumno.FechaNacimiento" class="form-control" ng-model="vm.currentAlumno.fechaNacimiento" />
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group"><h4 class="modal-title">Datos apoderado</h4></div>
                                            <div class="form-group">
                                                <label asp-for="Apoderado.ApellidoPaterno">Apellido Paterno (*)</label>
                                                <span asp-validation-for="Apoderado.ApellidoPaterno" class="text-muted text-validation"></span>
                                                <input type="text" asp-for="Apoderado.ApellidoPaterno" class="form-control" maxlength="25" ng-model="vm.currentAlumno.apoderado.apellidoPaterno" />
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="Apoderado.ApellidoMaterno">Apellido Materno (*)</label>
                                                <span asp-validation-for="Apoderado.ApellidoMaterno" class="text-muted text-validation"></span>
                                                <input type="text" asp-for="Apoderado.ApellidoMaterno" class="form-control" maxlength="25" ng-model="vm.currentAlumno.apoderado.apellidoMaterno" />
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="Apoderado.Nombres">Nombres (*)</label>
                                                <span asp-validation-for="Apoderado.Nombres" class="text-muted text-validation"></span>
                                                <input type="text" asp-for="Apoderado.Nombres" class="form-control" maxlength="50" ng-model="vm.currentAlumno.apoderado.nombres" />
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="Apoderado.Dni">DNI (*)</label>
                                                <span asp-validation-for="Apoderado.Dni" class="text-muted text-validation"></span>
                                                <input type="text" asp-for="Apoderado.Dni" class="form-control" maxlength="8" placeholder="Ej. 71079379" ng-model="vm.currentAlumno.apoderado.dni" />
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="Apoderado.Sexo">Sexo (*)</label>
                                                <span asp-validation-for="Apoderado.Sexo" class="text-muted text-validation"></span>
                                                <select asp-for="Apoderado.Sexo" class="form-control" ng-model="vm.currentAlumno.apoderado.sexo">
                                                    <option ng-selected="true" value="">Seleccione</option>
                                                    <option value="M">Masculino</option>
                                                    <option value="F">Femenino</option>
                                                </select>
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="Apoderado.EstadoCivil">Estado Civil (*)</label>
                                                <span asp-validation-for="Apoderado.EstadoCivil" class="text-muted text-validation"></span>
                                                <select asp-for="Apoderado.EstadoCivil" class="form-control" ng-model="vm.currentAlumno.apoderado.estadoCivil">
                                                    <option ng-selected="true" value="">Seleccione</option>
                                                    <option value="S">Soltero</option>
                                                    <option value="C">Casado</option>
                                                    <option value="V">Viudo</option>
                                                    <option value="D">Divorciado</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="form-group form-buttons">
                                                <button type="reset" data-dismiss="modal" class="btn btn-outline dark">Cancelar</button>
                                                <input type="submit" value="Actualizar alumno" class="btn btn-success" />
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane" role="tabpanel" id="step2">
                        <!-- Panel visualización de notas -->
                        <div class="col-md-5 col-centered">
                            <div class="portlet">
                                <div class="portlet-title">
                                    <div class="caption">
                                        <i class="fa fa-table"></i>Notas: {{vm.matricula.seccion.grado.nombre + ' de ' + vm.matricula.seccion.grado.nivel.nombre}}
                                    </div>
                                </div>
                                <div class="portlet-body">
                                    <div class="table-scrollable">
                                        <table class="table table-striped table-bordered table-advance table-hover">
                                            <thead>
                                                <tr>
                                                    <th class="text-center"><i class="efid-book"></i> Curso </th>
                                                    <th class="text-center"><i class="efid-calculator"></i> Promedio </th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr ng-repeat="nota in vm.notas">
                                                    <td>{{ nota.curso.nombre }}</td>
                                                    <td class="text-center"><span ng-class="{'desaprobado': nota.calificacion <= 11}">{{ nota.calificacion < 0 ? "N.A." : nota.calificacion }}</span></td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group form-buttons">
                                            <button id="btn-step2" class="btn btn-primary next-step">
                                                Guardar y continuar
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane" role="tabpanel" id="step3">
                        <!-- Panel visualización de pagos -->
                        <div class="col-md-4 col-centered">
                            <div class="portlet">
                                <div class="portlet-title">
                                    <div class="caption">
                                        <i class="fa fa-table"></i>Pagos: {{vm.matricula.anioAcademico.nombre}}
                                    </div>
                                </div>
                                <div class="portlet-body">
                                    <div class="table-scrollable">
                                        <table class="table table-striped table-bordered table-advance table-hover">
                                            <thead>
                                                <tr>
                                                    <th class="text-center"><i class="fa fa-calendar-check-o"></i> Cuota </th>
                                                    <th class="text-center"><i class="efid-calculator"></i> Monto </th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr ng-repeat="cuota in vm.deudas">
                                                    <td class="text-center">Cuota {{ $index + 1 }}</td>
                                                    <td class="text-center">{{ cuota.monto === 0 ? "Cancelado" : (cuota.monto | currency: "S/.": 2) }}</td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group form-buttons">
                                            <button id="btn-step3" class="btn btn-primary next-step" ng-click="vm.getNotas(vm.alumno.id)">
                                                Guardar y continuar
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane" role="tabpanel" id="complete">
                        <div id="content">
                            <!-- Panel de visualización del grado a matricular -->
                            <div class="col-md-5 col-centered">
                                <div class="portlet">
                                    <div class="portlet-title">
                                        <div class="caption">
                                            <i class="fa fa-user"></i>Datos del alumno: 
                                        </div>
                                    </div>
                                    <div class="portlet-body">
                                        <span class="sbold">Apellidos y Nombres:</span> {{vm.alumno.apellidoPaterno + ' ' + vm.alumno.apellidoMaterno + ', ' + vm.alumno.nombres}}
                                        <br /><span class="sbold">DNI:</span> {{vm.alumno.dni}}
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-5 col-centered">
                                <div class="portlet">
                                    <div class="portlet-title">
                                        <div class="caption">
                                            <i class="fa fa-table"></i>Grado: {{vm.nextGrado.nombre + ' de ' + vm.nextGrado.nivel.nombre}}
                                        </div>
                                    </div>
                                    <div class="portlet-body">
                                        <div class="table-scrollable">
                                            <table class="table table-striped table-bordered table-advance table-hover">
                                                <thead>
                                                    <tr>
                                                        <th class="text-center"><i class="efid-book"></i> Nombre </th>
                                                        <th class="text-center"><i class="fa fa-clock-o"></i> Horas Académicas </th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <tr ng-repeat="curso in vm.nextCursos">
                                                        <td>{{ curso.nombre }}</td>
                                                        <td class="text-center">{{ curso.horasAcademicas }}</td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group form-buttons">
                                                <a ng-show="vm.isMatriculado" ng-href="Matriculas/ReporteMatricula/{{vm.alumno.dni}}" target="_blank" class="btn btn-small red">
                                                    <i class="fa fa-file-pdf-o"></i> Exportar
                                                </a>
                                                <button id="btn-step3" class="btn btn-primary next-step" ng-click="vm.procesarMatricula(vm.alumno.id)">
                                                    Matricular
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    </div>
</div>